<div class="ui green segment">
  <span class="ui label">{{@model.employee.email}}</span>
  <button class="ui black button" type="button" {{action "logout"}}>
    Logout
  </button>
</div>

<h2>Préparation des commandes</h2>
<h3>Crées (en attente de préparation)</h3>

  {{#each @model.orders as |order|}}

      {{#if order.created}}
        <i class="hourglass outline yellow icon"></i>

      <LinkTo @route="order" @model={{order.id}}>
        {{order.dateCreation}} <span class="ui circular label">{{order.count}}</span>
      </LinkTo>
      {{/if}}

  {{/each}}

  <h3>Préparées</h3>

  {{#each @model.orders as |order|}}
    {{#if order.prepare}}
      <i class="green check  icon"></i>
      <LinkTo @route="order" @model={{order.id}}>
        {{order.dateCreation}} <span class="ui circular label">{{order.count}}</span>
      </LinkTo>
      <div class="ui green label">{{order.toPay}} € </div><br>
    {{/if}}

  {{/each}}
